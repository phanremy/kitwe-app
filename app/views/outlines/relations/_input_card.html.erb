<%= render layout: 'shared/outline_card', locals: { close_if_click_out: false } do %>
  <% if user_signed_in? %>
    <%= turbo_frame_tag :relation_input,
      src: edit_outlines_profile_relations_url(profile) do %>
      <%= render partial: 'shared/spinner' %>
    <% end %>
    <div class="w-full md:w-[300px] lg:w-[300px]">
      <%= turbo_frame_tag :relation_output do %>
      <% end %>
    </div>
  <% else %>
    <%= t('relations.user_not_signed_in') %>
  <% end %>
<% end %>
