<%= render layout: 'shared/outline_card' do %>
  <div class="p-5" style="width: fit-content">
    <%= form_with model: [:outlines, :profile, couple] do |form| %>
      <%= form.hidden_field :creator_id, value: current_user&.id %>
      <div class="mb-6">
        <%= form.select :profile1_id, couple_profile_options(profile1_id: params[:profile_id], profile2_id: nil, blocked: true), {}, disabled: true %>
      </div>
      <div class="mb-6 flex items-center">
        <%= form.select :profile2_id, couple_profile_options(profile1_id: params[:profile_id], profile2_id: couple.profile2_id, blocked: false), {} %>
        <%= link_to t('profiles.new'), new_profile_path(coupled_with: params[:profile_id]), class: "ml-2" %>
      </div>
      <div class="actions">
        <%= form.submit t('submit'), class:'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded cursor-pointer' %>
      </div>
    <% end %>
  </div>
<% end %>
