<%= render layout: 'shared/outline_card' do %>
  <%= form_with model: [:outlines, :profile, couple] do |form| %>
    <%= form.hidden_field :creator_id, value: current_user&.id %>
    <%= form.hidden_field :profile1_id, value: params[:profile_id] %>
    <div class="flex flex-col justify-between items-center my-5">
      <%= form.select :profile2_id, couple_profile_options(profile1_id: params[:profile_id], profile2_id: couple.profile2_id, blocked: false), {}, class: 'w-full rounded' %>
      <p class="my-5"><%= t('or') %></p>
      <%= link_to t('profiles.new'), new_outlines_profile_path(coupled_with: params[:profile_id]), data: { turbo_stream: true }, class: "ml-2" %>
    </div>
    <div class="actions">
      <%= form.submit t('submit'), class:'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded cursor-pointer' %>
    </div>
  <% end %>
<% end %>
