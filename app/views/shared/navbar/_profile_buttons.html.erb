<% is_active = request.url.split('?')[0] == url.split('?')[0] %>
<div class="grow lg:mx-0 mx-1">
  <%= link_to url do %>
    <div class="<%= "bg-gray-50" if is_active %> h-full lg:py-4 lg:px-4 px-2 text-xs inline-flex justify-center w-full rounded-md border border-gray-300 shadow-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-100 focus:ring-indigo-500">
      <%= image_tag "#{category.to_s}.svg", size: "40x30" %>
    </div>
  <% end %>
</div>
