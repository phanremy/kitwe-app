<%= form_with model: @couple do |form| %>
  <%= form.hidden_field :creator_id, value: current_user&.id %>
  <div class="mb-6">
    <%= form.select :profile1_id, couple_profile_options(params[:profile_id]), {}, disabled: true %>
  </div>
  <div class="mb-6">
    <%= form.select :profile2_id, couple_profile_options(@couple.profile2_id), {} %>
  </div>
  <div class="actions">
    <%= form.submit t('submit'), class:'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded cursor-pointer' %>
  </div>
<% end %>
