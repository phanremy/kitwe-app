<%= form_with model: @couple do |form| %>
  <div class="mb-6">
    <%= form.select :profile1_id, couple_profile_options, {} %>
  </div>
  <div class="mb-6">
    <%= form.select :profile2_id, couple_profile_options, {} %>
  </div>
  <div class="actions">
    <%= form.submit t('submit'), class:'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded cursor-pointer' %>
  </div>
<% end %>
