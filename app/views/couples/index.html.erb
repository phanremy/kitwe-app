<div>
  <%= render layout: 'shared/options', locals: { page_header: true } do %>
    <%= link_to t('create_new_couple'), new_couple_path(profile_id: params[:profile_id]), class: 'text-gray-700 block px-4 py-2 text-sm', role:'menuitem', tabindex:'-1' %>
  <% end %>

  <ul>
    <% @couples.each do |couple| %>
      <li class="py-2">
        <div class="flex items-center">
          <div class="flex w-full">
            <%= partners_links(couple) %>
          </div>

          <%= render layout: 'shared/options', locals: { page_header: false } do %>
            <%= link_to t('create_new_child'), new_profile_path(couple_id: couple.id, profile_id: nil), method: :get, class: 'text-gray-700 block px-4 py-2 text-sm', role:'menuitem', tabindex:'-1'  %>
            <%= button_to t('edit'), edit_couple_path(couple), method: :get, class: 'text-gray-700 block px-4 py-2 text-sm', role:'menuitem', tabindex:'-1' %>
            <%= button_to t('delete'), couple_path(couple), method: :delete, class: 'text-gray-700 block px-4 py-2 text-sm', role:'menuitem', tabindex:'-1' %>
          <% end %>
        </div>
      </li>
    <% end %>
  </ul>
</div>
