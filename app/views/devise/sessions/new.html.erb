<h2><%= t('log_in') %></h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), builder: TailwindBuilder, data: { turbo: false }) do |f| %>
  <div class="relative my-8 border-b-2 focus-within:border-blue-500">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: " " %>
    <%= f.label :email %>
  </div>

  <div class="relative my-8 border-b-2 focus-within:border-blue-500">
    <%= f.password_field :password, autocomplete: "current-password", placeholder: " " %>
    <%= f.label :password %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="flex relative my-8 justify-start items-center">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, class: 'ml-6 text-xs', style: 'transform: none !important;' %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit t('log_in') %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
