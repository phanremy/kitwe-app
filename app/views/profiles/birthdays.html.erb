<div class="flex justify-between">
  <div></div>
  <%= render 'search', url: profile_birthdays_path %>
</div>
<% if @birthdays.count.zero? %>
  <p> No Birthdays found</p>
<% else %>
  <% @birthdays.each do |birthday| %>
    <p>
      <%= link_to profile_path(birthday[:id]) do %>
        <%= birthday[:name] %>
      <% end %>
       - <%= l birthday[:date], format: :fr_long %>
       - in <%= (birthday[:date] - Date.today).to_i %> days
    </p>
  <% end %>
<% end %>
