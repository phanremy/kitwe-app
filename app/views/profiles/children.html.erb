<% if params[:profile_id] && @couples.count.positive? %>
  <div class="text-right">
    <%= render layout: 'shared/options', locals: { page_header: true } do %>
      <% @couples.each do |couple| %>
        <%= link_to t('children.create_new_for', couple_designation: couple.designation), new_profile_path(profile_id: params[:profile_id], couple_id: couple.id), class: 'text-gray-700 block px-4 py-2 text-sm', role:'menuitem', tabindex:'-1' %>
      <% end %>
    <% end %>
  </div>
<% end %>
<div class="mt-8">
  <% if @children.count.zero? %>
    <p>No Children found</p>
  <% else %>
    <ul>
      <% @children.each do |child| %>
        <li class="flex flex-wrap">
          <%= link_to child.designation, profile_path(child) %>
          :Â 
          <%= child_of(child.parents) %>
        </li>
      <% end %>
    </ul>
  <% end %>
</div>
