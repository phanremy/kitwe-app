<%= link_to profile_path(profile), target: '_top' do %>
  <div class="flex align-items-start my-2 px-1 lg:px-5 py-1 border border-white hover:border-gray-300 rounded-lg">
    <div class="grow flex items-center">
      <p><%= non_breaking([' ','👤', profile.designation].join('    ')) %></p>
    </div>
    <div style="flex: 0 0 40%; width: 40%; overflow: hidden;">
      <p><%= non_breaking([' ','✉️', profile.email.presence].join('    ')) %></p>
      <p><%= non_breaking([' ','📞', profile.phone.presence].join('    ')) %></p>
    </div>
  </div>
<% end %>
