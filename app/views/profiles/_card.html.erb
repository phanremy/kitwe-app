<%= link_to profile_path(profile), target: '_top' do %>
  <div class="flex align-items-start my-2 px-1 lg:px-5 py-2 border border-white hover:border-gray-300 rounded-lg">
    <div class="grow">
      <p><%= non_breaking(['👨‍💻', profile.pseudo.presence].join(' ')) %></p>
      <p><%= non_breaking(['👤', profile.full_name.presence].join(' ')) %></p>
    </div>
    <div style="flex: 0 0 40%; width: 40%; overflow: hidden;">
      <p><%= non_breaking(['＠', profile.category].join(' ')) %></p>
      <p><%= non_breaking(['📞', profile.birth_date].join(' ')) %></p>
    </div>
  </div>
<% end %>
