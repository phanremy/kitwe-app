<%= form_with model: @profile, builder: TailwindBuilder do |form| %>
  <%= form.hidden_field :creator_id, value: current_user&.id %>
  <div class="mb-6">
    <%= form.label :pseudo %>
    <%= form.text_field :pseudo %>
  </div>
  <div class="mb-6">
    <%= form.label :first_name %>
    <div class="flex">
      <%= form.text_field :first_name %>
      <%= form.select :first_name_privacy, profile_privacies, {} %>
    </div>
  </div>
  <div class="mb-6">
    <%= form.label :last_name %>
    <div class="flex">
      <%= form.text_field :last_name %>
      <%= form.select :last_name_privacy, profile_privacies, {} %>
    </div>
  </div>
  <div class="mb-6">
    <%= form.label :email %>
    <div class="flex">
    <%= form.text_field :email %>
    <%= form.select :email_privacy, profile_privacies, {} %>
    </div>
  </div>
  <div class="mb-6">
    <%= form.label :phone %>
    <div class="flex">
      <%= form.text_field :phone %>
      <%= form.select :phone_privacy, profile_privacies, {} %>
    </div>
  </div>
  <div class="mb-6">
    <%= form.label :birth_date %>
    <div class="flex">
      <%= form.date_field :birth_date %>
      <%= form.select :birth_date_privacy, profile_privacies, {} %>
    </div>
  </div>
  <div class="mb-6">
    <%= form.label :tiktok_url %>
    <%= form.text_field :tiktok_url %>
  </div>
  <div class="mb-6">
    <%= form.label :twitter_url %>
    <%= form.text_field :twitter_url %>
  </div>
  <div class="mb-6">
    <%= form.label :linkedin_url %>
    <%= form.text_field :linkedin_url %>
  </div>
  <div class="mb-6">
    <%= form.label :notes %>
    <%= form.text_area :notes %>
  </div>
  <div class="actions">
    <%= form.submit t('submit') %>
  </div>
<% end %>
