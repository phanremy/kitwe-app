<%= render layout: 'shared/modal' do %>
  <div class="flex flex-col justify-center items-center"
       data-controller="clipboard"
       data-clipboard-target-value="#token-name">
    <div class="flex flex-wrap place-content-center">
      <%= button_to t('export.download'), downloads_path(format: :csv), method: :post, params: { data: @data, file_name: @file_name}, class: 'text-center bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded' %>
      <%= button_to t('export.copy'), modal_shared_links_path, method: :post, id: 'token-name', data: { 'clipboard-text': @tokenized_name }, class: 'text-center bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded' %>
    </div>
    <div id="data" class="overflow-y-scroll my-8 text-sm" style="width: 80%; white-space: pre-line">
      <%= @tokenized_name %>
    </div>
  </div>
<% end %>
